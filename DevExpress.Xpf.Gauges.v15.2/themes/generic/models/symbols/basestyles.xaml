<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DevExpress.Xpf.Gauges">
  <Style x:Key="SymbolStyleBase" TargetType="{x:Type local:SymbolPresentationControl}">
    <Setter Property="FrameworkElement.Margin" Value="{Binding Margin}"/>
    <Setter Property="UIElement.RenderTransform" Value="{Binding RenderTransform}"/>
    <Setter Property="UIElement.RenderTransformOrigin" Value="0.5, 0.5"/>
  </Style>
</ResourceDictionary>