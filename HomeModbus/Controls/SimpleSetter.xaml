<UserControl x:Class="HomeModbus.Controls.SimpleSetter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HomeModbus.Controls"
             mc:Ignorable="d" 
             Height="60" MaxWidth="300" d:DesignWidth="300">
    <Grid>
        <Button x:Name="BMain" HorizontalContentAlignment="Stretch">
            <Grid HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="30"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TbName"></TextBlock>
                <Image Grid.Column="1" Width="24" Height="24">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Style.Triggers>
                                
                            </Style.Triggers>
                        </Style>

                    </Image.Style>
                </Image>
            </Grid>
        </Button>
    </Grid>
</UserControl>
