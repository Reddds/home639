<?xml version="1.0" encoding="utf-8" ?>
<HomeSettings>
  
  <ControllerGroups>
    <ControllerGroup Name="Спальня">
      <Controllers>
        <Controller Id="con_2" Name="Контроллер 1" ModbusAddress="2">
          <Parameters>
            <Parameter Id="bed_1" Name="Сколько покакал" ModbusType="InputRegister" ModbusIndex="0" RefreshRate="0:1:0">
            </Parameter>
            <Parameter Id="bed_2" Name="Последний раз какал" ModbusType="InputRegister" DataType="RdDateTime" ModbusIndex="4" RefreshRate="0:1:0">
            </Parameter>
            <Parameter Id="bed_3" Name="Температура" ModbusType="InputRegister" ModbusIndex="2" RefreshRate="0:1:0"
                        Icon="ThermometreSmall.png">
            </Parameter>
            <Parameter Id="bed_4" Name="Влажность" ModbusType="InputRegister" ModbusIndex="3" RefreshRate="0:1:0"
                        Icon="HumiditySmall.png">
            </Parameter>
            <Parameter Id="bed_5" Name="Вызов" ModbusType="Coil" ModbusIndex="4">
            </Parameter>
          </Parameters>
          <Setters>
            <Setter Id="bed_10" Name="Установка времени и даты" Type="RealDateTime" ModbusIndex="0"/>
          </Setters>
        </Controller>
      </Controllers>

    </ControllerGroup>
    <ControllerGroup Name="Коридор">
      <Controllers>
        <Controller Id="con_1" Name="Контроллер 1" ModbusAddress="1">
          <Parameters>
            <Parameter Id="corr_1" Name="Движение и свет" ModbusType="Discrete" ModbusIndex="3">
              
            </Parameter>
          </Parameters>
        </Controller>
      </Controllers>
    </ControllerGroup>
    <ControllerGroup Name="Ванна">
      <Controllers>
        <Controller Id="con_3" Name="Контроллер 1" ModbusAddress="3">
          <Parameters>
            <Parameter Id="bath_1" Name="Дверь открыта" ModbusType="Discrete" ModbusIndex="0">
              
            </Parameter>
            <Parameter Id="bath_2" Name="Свет включён" ModbusType="Discrete" ModbusIndex="1">
             
            </Parameter>
          </Parameters>
        </Controller>
      </Controllers>
    </ControllerGroup>
  </ControllerGroups>
  
  
  
  <Rooms>
    <Room Name="Спальня">
      <Layout>
        <LayoutGroup Orientation="Vertical">
          <Visibility Name="Сколько покакал" ParameterId="bed_1">
            <DigitalIndicator/>
            <LastTimeIndicator/>
          </Visibility>
          <Visibility ParameterId="bed_2">
            <LastTimeIndicator Icon="poo.png"/>
          </Visibility>
        </LayoutGroup>
        <LayoutGroup Orientation="Vertical">
          <Visibility ParameterId="bed_3" Icon="ThermometreSmall.png">
            <DigitalIndicator/>
            <AnalogIndicator Icon="Thermometre.png">
              <Scale Min="10" Max="35" MajorCount="5" MinorCount="5" GoodValue="20">
                <Ranges>
                  <Range StartValue="18" EndValue="24" />
                  <Range StartValue="10" EndValue="18" />
                  <Range StartValue="24" EndValue="35" />
                </Ranges>
              </Scale>
            </AnalogIndicator>
            <Chart/>
          </Visibility>
          <Visibility ParameterId="bed_4" Icon="HumiditySmall.png">
            <DigitalIndicator/>
            <AnalogIndicator Icon="Humidity.png">
              <Scale Min="0" Max="100" MinorCount="5" GoodValue="50">
                <Ranges>
                  <Range StartValue="30" EndValue="60" />
                  <Range StartValue="60" EndValue="100" />
                  <Range StartValue="0" EndValue="30" />
                </Ranges>
              </Scale>
            </AnalogIndicator>
            <Chart/>
          </Visibility>
        </LayoutGroup>
        <Visibility ParameterId="bed_5">
          <ShowBalloon Type="Exclamation" Text="Вызов!!!!">
            <OnClose>
              <ResetParameter/>
            </OnClose>
          </ShowBalloon>
        </Visibility>
        <Visibility SetterId="bed_10">

        </Visibility>

      </Layout>
    </Room>
    <Room Name="Коридор">
      <Layout>
        <Visibility ParameterId="corr_1">
          <ShowBalloon Type="Alarm" Text="Движение!!!!" ShowWhileParameterSet="true">
          </ShowBalloon>
        </Visibility>
      </Layout>
      
    </Room>
    <Room Name="Ванна">
      <Layout>
        <Visibility ParameterId="bath_1">
          <BinaryIndicator OnIcon="DoorOpened.png" OffIcon="DoorClosed.png"/>
        </Visibility>
        <Visibility ParameterId="bath_2">
          <BinaryIndicator OnIcon="LightBulbOn.png" OffIcon="LightBulbOff.png"/>
        </Visibility>
      </Layout>
      
    </Room>
  </Rooms>
</HomeSettings>
